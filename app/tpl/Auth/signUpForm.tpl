

<form class="form-signin" method="post" action="?Auth=signUp">
  <h2 class="form-signin-heading move-to-header">Please sign up</h2>
  <div class="control-group error">
    <input type="text" placeholder="Email address" name="email" class="input-block-level">
    <span class="help-inline">Please correct the error</span>
  </div>
  <input type="password" placeholder="Password" name="pass" class="input-block-level">
  <input type="password" placeholder="Password once more" name="pass2" class="input-block-level">
  <input type="text" placeholder="Your name" name="name" class="input-block-level">
  
  <button type="submit" class="btn btn-large btn-primary " data-loading-text="Loading...">Sign up</button>
</form>

